  #include <iostream>
#include <cmath>
#define _USE_MATH_DEFINES
#include <math.h>
#include <string>


using namespace std;

//1 zadanie

int main()
{
	int a, chislo,detimetr, kilometr, metr, milimetr, santimetr;
	cout << "chislo vvedi(1-5):";
	cin >> chislo;
	switch (chislo) {
	case 1:
		cout << "skok? ";
		cin >> a;
		detimetr = double(0.1 * a);
		cout << "stolko vishlo: " <<detimetr;
		break;
	case 2:
		cout << "skok? ";
		cin >> a;
		kilometr = 1000 * a;
		cout << "stolko vishlo: " << kilometr;
		break;
	case 3:
		cout << "skok? ";
		cin >> a;
		metr = a;
		cout << "stolko vishlo: " << metr;
		break;
	case 4:
		cout << "skok? ";
		cin >> a;
		milimetr = double(0.001 * a);
		cout << "stolko vishlo: " << milimetr;
		break;
	case 5:
		cout << "skok? ";
		cin >> a;
		santimetr = double(0.01 * a);
		cout << "stolko vishlo: " << santimetr;
	default:
		cout << "hz, ne znay";
		break;
	}

	return 0;
}


// 2 zadanie

int main()
{
    setlocale(LC_ALL, "RU");
    double f, x;
    cout << "enter x: ";
    cin >> x;
    if (x <= -(M_PI) / 2)
        f = 1 / x;
    if (x >= M_PI / 2)
        f = sqrt(x * x * x - 1);
    else
        f = tan(M_PI * x);

    cout << "f = " << f;
    return 0;
}

//3 zadanie

int main()
{
	setlocale(0, "RU");
	double x, y, r;
	cout << "x = ";
	cin >> x;
	cout << " y = ";
	cin >> y;

	r = pow((pow((x - 0), 2) + pow((y - 0), 2)), 0.5);

	if (r <= 10 && -10 <= x && x <= 10 && -5 <= y && y <= 5)

		cout << "Точка принадлежит координатам x y";
	else if (y <= 0 && x <= 0 && (y > (0.5 * x + (-5))))

		cout << " Точка принадлежит";
	else if (x >= 0 && x <= 10 && y <= 0 && y >= -5)
		cout << " Точка принадлежит";
	else
		cout << " Точка не принадлежит";
	return 0;

}

 //4 zadanie

string sclonenie(int number);
int main() {
  setlocale(LC_ALL, "RU");
  int n;
  cout << "Введите кол-во ёлок: "; cin >> n;
  cout << "Коты нарядили и опрокинули: " << n<< " " << sclonenie(n);
  return 0;
}
string sclonenie(int number) {
   int pervic = number % 10;
   int dvecifri = number % 100;
   if (dvecifri > 10 && dvecifri < 19)
     return "ёлок.";
   switch (pervic) {
   case 1:
     return "ёлку."; break;
   case 2:
   case 3: 
   case 4:
     return "ёлки."; break;
   default:
     return "ёлок."; break;
   }
}
